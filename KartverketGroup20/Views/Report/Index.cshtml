@model IEnumerable<Report>






<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-left">
    <div class="list-group w-75">

        @foreach (var item in Model)
        {
            <a asp-action="Detail" asp-controller="Report" asp-route-id="@item.Id" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                <img src="~/images/kartverket-logo-alternativ.jpg" alt="twbs" width="50" height="40" class="square flex-shrink-0">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h6 class="mb-0">Rapport nr: @item.Id || Kart: @item.MapType </h6>
                        <p class="mb-0 opacity-75">@item.Description</p>
                    </div>
                    <div class="d-flex flex-column justify-content-end align-items-baseline ms-auto">
                    <small class="opacity-50 text-nowrap">@item.ReportTime</small>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
