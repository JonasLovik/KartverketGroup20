@model Report

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Edit Report</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Skriv inn en tittel"/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MapType" class="form-label">Kart Spesifikasjon</label>
                            <select asp-for="MapType" class="form-control" id="MapSpecification">
                                <option value="">Velg en type...</option>
                                <option value="turkart">Turkart</option>
                                <option value="stedsnavn">Stedsnavn</option>
                                <option value="veg">Veg</option>
                                <option value="adresse">Adresse</option>
                                <option value="turrute">Turrute</option>
                            </select>
                            <span asp-validation-for="MapType" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Beskrivelse</label>
                            <textarea asp-for="Description" rows="5" class="form-control" placeholder="Legg ved en beskrivelse"></textarea> <!-- Riktig element: <textarea> i stedet for <input> -->
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ReportTime" class="form-label">Date</label>
                            <input asp-for="ReportTime" class="form-control" type="date" />
                            <span asp-validation-for="ReportTime" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button asp-controller="Report" asp-action="Index" type="submit" class="btn btn-primary">Edit</button>
                            <a asp-controller="Report" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}